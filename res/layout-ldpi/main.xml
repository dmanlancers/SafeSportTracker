<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:id="@+id/widget58"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@drawable/subtle"
    android:gravity="top" >

    <RelativeLayout
        android:id="@+id/tittle"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        
        android:background="#0066ff" >

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/safe_sport_tracker"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
           />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/yellow1"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tittle"
        android:background="#FFFFFF" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/col1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text91"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/box6"
        android:paddingBottom="3dp"
        android:paddingLeft="3dp"
        android:paddingTop="3dp" >

        <TextView
            android:id="@+id/txt1"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/imgBike"
            android:layout_centerHorizontal="true"
            
            android:text="@string/ciclismo"
          android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/imgBike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="2dp"
            android:background="@drawable/icon_bike_main"
            android:contentDescription="@string/bike_icon"
            
            android:paddingBottom="7dp"
            android:paddingTop="6dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/col4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/col1"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/box6"
        android:paddingBottom="3dp"
        android:paddingLeft="3dp"
        android:paddingTop="3dp" >

        <ImageButton
            android:id="@+id/imgWalk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/icon_walk_main"
            android:contentDescription="@string/walk_icon"
            android:padding="2dp"
            android:paddingBottom="1dp"
            android:paddingTop="2dp" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/imgWalk"
            android:layout_centerHorizontal="true"
            
            android:text="@string/caminhada"
            
            android:textColor="#ffffff"
            android:textSize="20sp"
           />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/col3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/col4"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/box6"
        android:paddingBottom="3dp"
        android:paddingLeft="3dp"
        android:paddingTop="3dp" >

        <ImageButton
            android:id="@+id/ImgRun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_run_main"
            android:contentDescription="@string/run_icon" />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/ImgRun"
            android:layout_centerHorizontal="true"
            android:text="@string/atletismo"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/col5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/col2"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/box6"
        android:paddingBottom="3dp"
        android:paddingLeft="3dp"
        android:paddingTop="3dp"
       >

        <ImageButton
            android:id="@+id/ImgSnow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_snow_main"
            android:contentDescription="@string/snow_icon" />

        <TextView
            android:id="@+id/txt5"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/ImgSnow"
            android:layout_centerHorizontal="true"
            android:text="@string/snowboard"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/col2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/col3"
         android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/box6"
        android:paddingBottom="3dp"
        android:paddingLeft="3dp"
        android:paddingTop="3dp">

        <ImageButton
            android:id="@+id/imgMountain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_mountain_main"
            android:contentDescription="@string/mountain_icon" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/imgMountain"
            android:layout_centerHorizontal="true"
            android:text="@string/escalada"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
           />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/text91"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yellow1"
        android:background="#0066ff" >

        <TextView
            android:id="@+id/choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="left"
            android:text="@string/escolha_uma_modalidade_"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/yelow2"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF" >
    </RelativeLayout>

    <Button
        android:id="@+id/btnMediaP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnWifi"
        android:layout_alignBottom="@+id/btnWifi"
        android:layout_alignRight="@+id/col5"
        android:background="@drawable/btnmedia_p" />

    <Button
        android:id="@+id/btnWifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/btngps_wifi" />

    <Button
        android:id="@+id/btnDef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btndefi" />
   
</RelativeLayout>